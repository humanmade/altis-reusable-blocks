{
    "name": "altis/enhanced-reusable-blocks",
    "description": "Adds functionality to reusable blocks to ease their usage in the Altis platform.",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.7",
        "humanmade/asset-loader": "~0.3.4"
    },
    "require-dev": {
        "automattic/vipwpcs": "^2.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "squizlabs/php_codesniffer": "^3.4",
        "brain/monkey": "^2.3",
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^7.5"
    },
    "autoload-dev": {
        "psr-4": {
            "EnhancedReusableBlocks\\Tests\\Unit\\": "tests/unit/",
            "EnhancedReusableBlocks\\REST_API\\": "rest-api/",
            "EnhancedReusableBlocks\\REST_API\\Relationships\\": "rest-api/relationships/",
            "EnhancedReusableBlocks\\REST_API\\Search\\": "rest-api/search/"
        },
        "files": [
            "inc/namespace.php",
            "inc/categories.php",
            "inc/connections.php",
            "inc/rest-api/namespace.php",
            "inc/rest-api/relationships/class-rest-endpoint.php",
            "inc/rest-api/search/class-rest-endpoint.php"
        ]
    },
    "scripts": {
        "coverage": "phpunit --coverage-html coverage",
        "lint:phpcs": "phpcs",
        "test:unit": "phpunit --testsuite unit"
    }
}
